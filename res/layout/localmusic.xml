<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <include layout="@layout/local_header" />

    <RadioGroup
        android:id="@+id/rg_local_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/local_radio_select1"
            android:button="@null"
            android:gravity="center"
            android:text="单曲"
            android:textColor="@color/local_music_text_color" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:background="@drawable/local_radio_select2"
            android:button="@null"
            android:gravity="center"
            android:text="歌手"
            android:textColor="@color/local_music_text_color" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="-1dp"
            android:layout_weight="1"
            android:background="@drawable/local_radio_select2"
            android:button="@null"
            android:gravity="center"
            android:text="专辑"
            android:textColor="@color/local_music_text_color" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/local_radio_select3"
            android:button="@null"
            android:gravity="center"
            android:text="文件夹"
            android:textColor="@color/local_music_text_color" />
    </RadioGroup>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#eeeeee" />

    <FrameLayout
        android:id="@+id/fl_loacl_music"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eeeeee" >
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/shadow_top" />
    <!--  -->

</LinearLayout>